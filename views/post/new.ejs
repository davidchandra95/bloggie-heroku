<% include ../partials/header %>

<div class="row">
   <h1 style="text-align: center">Your Story</h1>
   <hr>
   <div>
      <form action="/post" method="POST">

         <div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
               <input type="text" class="form-control" autocomplete="off" name="title" placeholder="Title">
            </div>
         </div>
         <div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
               <input type="text" class="form-control" autocomplete="off" name="image" placeholder="Image URL">
            </div>
         </div>
         <div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
               <input type="text" class="form-control" autocomplete="off" name="tags" placeholder="Tags">
            </div>
         </div>

         <!-- <div class="form-group">
            <input type="text" class="form-control" name="description" placeholder="Description">
         </div> -->
         <div class="row">
            <div class="form-group col-md-12">
               <section id="editor">
                  <textarea id="content" name="content"></textarea>
               </section>
            </div>
         </div>
         <div class="form-group">
            <button class="btn btn-primary">Save</button>
         </div>
      </form>
      <a href="/post">Back to Posts</a>
   </div>
</div>

<% include ../partials/footer %>
<script>
   $(function () {
      $('#content').froalaEditor({
         inlineMode: false,
         toolbarButtons: ['undo', 'redo', '|', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript',
            'superscript', 'outdent', 'indent', 'clearFormatting', 'insertTable', 'html'
         ],
         toolbarButtonsXS: ['undo', 'redo', '-', 'bold', 'italic', 'underline']
      });
   });
</script>