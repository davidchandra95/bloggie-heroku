<% include ../partials/header %>

<div class="row">
   <h1 style="text-align: center">Your Story</h1>
   <hr>
   <div class="col-md-8 col-md-offset-2">
      <form action="/post" method="POST">
         <div class="row">
            <div class="form-group">
               <input type="text" class="w3-input" autocomplete="off" name="title" placeholder="Title">
            </div>
         </div>
         <div class="row">
            <div class="form-group">
               <input type="text" class="w3-input" autocomplete="off" name="image" placeholder="Image URL">
            </div>
         </div>
         <div class="row">
            <div class="form-group">
               <input type="text" class="w3-input" autocomplete="off" name="description" placeholder="Description">
            </div>
         </div>
         <div class="row">
            <div class="form-group">
               <input type="text" class="w3-input" autocomplete="off" name="tags" placeholder="Tags">
            </div>
         </div>
         <div class="row">
            <div class="form-group">
               <input class="w3-check" type="checkbox" name="isPublic" checked="checked">
               <label>For public???</label>
            </div>
         </div>

         <div class="row">
            <div class="form-group">
               <section id="editor">
                  <textarea id="content" name="content"></textarea>
               </section>
            </div>
         </div>
         <div class="form-group pull-right">
            <button class="w3-btn w3-blue w3-large w3-round" style="width: 120px">Save</button>
            <a href="/post">Back to Posts</a>
         </div>
      </form>
   </div>
</div>

<% include ../partials/footer %>
<script>
   $(function () {
      $('#content').froalaEditor({
         inlineMode: false,
         toolbarButtons: ['undo', 'redo', '|', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript',
            'superscript', 'outdent', 'indent', 'align', 'clearFormatting', 'insertHR', 'insertTable', 'insertImage', 'html'
         ],
         toolbarButtonsXS: ['undo', 'redo', '-', 'bold', 'italic', 'underline']
      });
   });
</script>